{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@static/*": ["static/*"],
      "@context/*": ["context/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "include": ["./src/**/*"],
  "typeRoots": ["node_modules/@types"]
}
