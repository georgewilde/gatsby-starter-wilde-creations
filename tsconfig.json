{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@css/*": ["css/*"]
    }
  },
  "include": ["./src/**/*"],
  "typeRoots": ["node_modules/@types"]
}
